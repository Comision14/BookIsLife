<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head',{title:"Edicion de Producto"}) %> 
<body class="administrador">
    <%- include('./partials/header') %> 
    <main class="admi_main">
      <!--   Empieza el formulario -->
            <form class="form_admi" action="" method="">
               <!--  Titulos -->
               <h2 class="titulo_admi"> Formulario del Administrador</h2>
               <h3 class="titulo_dos_admi">Edicion de Libros</h3>
              <!--  seccion contenedora -->
               <article>
                   <!-- Titulo del libro-->
                <div class="admi__form-box">
                    <input class="admi_form-input" type="text" placeholder="Título del libro" name="titulo" id="titulo">
                    <span class="admi__text-error">Título</span>
                </div>
                <!-- Autor del libro-->
                <div class="admi__form-box">
                    <input class="admi_form-input" type="text" placeholder="Autor del libro" name="autor" id="autor">
                    <span class="admi__text-error">Autor</span>
                </div>
                <!-- Descripcion del libro-->
                <div class="admi__form-box">
                   <textarea class="admi_form-input" name="sinopsis" id="sinopsis" cols="5" rows="5" placeholder="Agregue la sinopsis"></textarea>
                    <span class="admi__text-error">Sinopsis</span>
                </div>
                <!-- Portada del libro-->
                <div class="admi__form-box">
                    <label class="admi_portada" for="Portada">Portada del Libro</label>
                    <input class="admi_file"  type="file" id="foto" name="foto"  >
                </div>
                <!-- Categoria del libro-->
                <div class="admi__form-box">
                    <select class="admi_select" name="categoria" id="categoria" >
                        <option  >Seleccione Categoria Literaria</option>
                        <option value="">Ciencia Ficción</option>
                        <option value="">Clásicos</option>
                        <option value="">Cómics y Mangas</option>
                        <option value="">Humor</option>
                        <option value="">Narrativa</option>
                        <option value="">Narrativa Romantica</option>
                        <option value="">Obras de Teatro</option>
                        <option value="">Poesía</option>
                        <option value="">Policiales</option>
                        <option value="">Terror</option>
                    </select>
                    <span class="admi__text-error">Categoria </span>
                </div>
                <div class="admi__form-box">
                    <input class="admi_form-input" type="number" placeholder="$$ Precio del Libro" name="precio" id="precio">
                    <span class="admi__text-error"> Precio </span>
                </div>
               </article>
               <div class="botones_admi">
                <button type="reset" class="admi_adherir admi_delete">Resetear</button>
                  <button type="submit" class="admi_adherir admi_submit">Editar</button>
               </div>   
            </form>
          
    </main>
    <%- include('./partials/footer') %>
    
</body>
</html>